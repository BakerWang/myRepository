<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd" default-autowire="byName" default-lazy-init="false">
	<!-- 定义此应用的组件扫描包 -->
	<context:component-scan base-package="org.darcy.controller" />
	
	<!--  前台站点主题-->
	<bean id="siteThemeAction" class="org.darcy.controller.SiteThemeAction" scope="prototype"></bean>
	
	<!--  后台站点主题-->
	<bean id="siteAdminThemeAction" class="org.darcy.controller.SiteAdminThemeAction" scope="prototype"></bean>
	
	<!--  上传-->
	<bean id="uploadAction" class="org.darcy.controller.UploadAction" scope="prototype" />
	
	<!--  ckeditor上传-->
	<bean id="ckEditorUploadAction" class="org.darcy.controller.CkEditorUploadAction" scope="prototype" />
	
	<bean id="cacheAction" class="org.darcy.controller.CacheAction" scope="prototype"/>
	
	<!-- 后台界面
	<bean id="backendUiAction" class="org.darcy.controller.BackendUiController" scope="prototype" />
	-->
	<!-- 系统设置-->
	<bean id="systemSettingAction" class="org.darcy.controller.SystemSettingAction" scope="prototype" />
	
</beans>